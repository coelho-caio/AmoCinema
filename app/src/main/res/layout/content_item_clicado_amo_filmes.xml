<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Item_clicado_amo_filmes"
    android:id="@+id/cl_item_clicado">

    <ImageView
        android:id="@+id/iv_item_clicado"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="@id/cl_item_clicado"
        app:layout_constraintStart_toStartOf="@id/cl_item_clicado"
        android:contentDescription="Poster do filme"
        app:layout_constraintBottom_toTopOf="@id/tv_item_clicado"/>
    <TextView
        android:id="@+id/tv_item_clicado"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/iv_item_clicado"
        app:layout_constraintStart_toStartOf="@id/iv_item_clicado"/>
</android.support.constraint.ConstraintLayout>